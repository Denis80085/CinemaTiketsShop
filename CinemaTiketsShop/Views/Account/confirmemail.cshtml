@using CinemaTiketsShop.Models.UserModels;

@model UserConfirmSignUpModel

@{
    ViewData["Title"] = "Confirm Email";
}

<h1>Please confirm your email with the confirmation code you recieved per email</h1>

<form class="form-group" asp-action="tryconfirm">
       <input type="text" class="form-control" asp-for="ConfirmCode"/>
       <input type="hidden" asp-for="UserName" />
       <input type="hidden" asp-for="UserId" />
       <input type="submit"/>
</form>
    

