@model IEnumerable<Movie>

@{
    ViewData["Title"] = "List of movies";
}

<div class="row">
    @foreach(var item in Model)
    {
        <div class="col-md-4 col-xs-6 border-primary mb-3">
            <div class="card mb-4" style="max-width: 540px">
                <div class="row g-0">
                    <div class="col-md-12">
                        <div class="card-header text-white bg-info">
                            <p class="card-text">
                                <h5 class="card-title">
                                    @item.Name
                                    <a class="text-white float-right"><i class="bi bi-pencil-square" style="float: right"></i></a>
                                </h5>
                                
                            </p>

                        </div>
                    </div>
                    <div class="col-md-6">
                        <img src="@item.Logo" alt="@item.Name" style="width:100%; padding: 2px"/>
                    </div>
                    <div class="col-md-6">
                        <div class="card-body" style="font-size: 12px">
                            <p class="card-text">@item.Description</p>
                            <p class="card-text"><b>Cinema:   </b>@item.Cinema?.Name</p>
                            <p class="card-text"><b>Category:   </b>@item.Category</p>
                            <p class="card-text"><b>Start Date:   </b>@item.StartDate.ToString("dd MMM yyy")</p>
                            <p class="card-text"><b>End Date:   </b>@item.EndDate.ToString("dd MMM yyy")</p>
                            <p class="card-text"><b>Status: </b> 
                                <b>
                                    @if (DateTime.Now <= item.EndDate && DateTime.Now >= item.StartDate)
                                    {
                                        <span class="badge bg-success text-white">Available</span>
                                    }
                                    else if(DateTime.Now > item.EndDate)
                                    {
                                        <span class="badge bg-danger">Expired</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-primary text-white">Upcoming</span>
                                    }
                                </b>
                            </p>
                            
                        </div>
                    </div>
                    <div class="col-md-12">
                        <div class="card-footer">
                            <p class="card-text" style="display: flex; flex-direction: row; justify-content: space-between">
                                <a class="btn btn-outline-primary float-right" style="font-size:12px"><i class="bi bi-eye-fill">Show details</i></a>
                                <a class="btn btn-success text-white" style="font-size:12px"><i class="bi bi-cart-plus">Add to cart(Price @item.Price.ToString("c"))</i></a>
                            </p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
    
</div>