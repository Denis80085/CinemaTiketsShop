@{
    ViewData["Title"] = "Movie Details";
}

@model Movie

<div class="container-fluid">
    <div class="row g-0">
        <div class="col-md-12 align-self-center">
            <div class="container">
                <div class="card shadow-lg">
                    <div class="row g-0">
                        <div class="card" style="width:100%">
                            <div class="d-flex flex-row">
                                <div>
                                    <img src="@Model.Logo" class="img-fluid rounded-start" alt="no image" style="max-width:250px">
                                </div>
                                <div>
                                    <div class="card-body">
                                        <h5 class="card-title">Card title</h5>
                                        <p class="card-text">This is a wider card with supporting text below as a natural lead-in to additional content. This content is a little bit longer.</p>
                                        <p class="card-text">Cinema</p> <!--Cinema-->
                                        <p class="card-text">Producer</p> <!--Producer-->
                                        <p class="card-text">Actors</p> <!--Actors-->
                                        <p class="card-text">Category</p> <!--Category-->
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

    </div>
</div>



